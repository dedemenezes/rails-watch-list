<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://br.web.img3.acsta.net/r_654_368/newsv7/19/01/17/20/18/3984219.jpg);">
  <div class="container text-center"">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container">
  <div class="d-flex justify-content-between align-items-end mt-5 mb-3">
    <h2>My movies</h2>
    <%= link_to  "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-success" %>
  </div>
</div>

<div class="container">
  <div class="card-group">
    <% @bookmarks.each do |bookmark| %>
    <div class="card">
      <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
      </div>
      <p>
        <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fas fa-trash"></i>
        <% end %>
      </p>
    </div>
    <% end %>
  </div>
</div>
