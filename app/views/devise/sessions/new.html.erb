<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6 form-content">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "rounded-pill" },
                      placeholder: 'user@domain.com' %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "rounded-pill" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block rounded-pill" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
