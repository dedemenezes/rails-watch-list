<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <%= render "shared/filter_movies" %>
      <div id="movies">
        <% @movies.each do |movie| %>
          <div class="card-product mb-3">
            <%= image_tag movie.poster_url %>
            <div class="card-product-infos">
              <h2><%= movie.title %></h2>
              <p><%= link_to  "More info", "#", remote: true %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




