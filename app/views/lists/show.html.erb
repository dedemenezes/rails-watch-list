<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>');">
  <div class="container text-center banner-box">
    <h1><%= @list.name %></h1>
    <p class="movies-count">
      <%= @list.movies.count %> movies
    </p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end align-items-end mt-5 mb-4">
    <%= link_to  "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-success" %>
  </div>
  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url %>
        <div class="card-trip-infos">
          <div>
            <h2>
              <%= bookmark.movie.title %>  <i class="fas fa-star"></i>
                <span>
                <%= bookmark.movie.rating %>
                </span>
            </h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
        </div>
        <div class="card-trip-bottom">
          <h4>
            <span>
              <i class="fas fa-quote-left"></i>
            </span>
            <%= bookmark.comment %>
          </h4>
            <%= link_to bookmark_path(bookmark), class: "delete", method: :delete, data: { confirm: 'Are you sure?' } do %>
            delete
            <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to  "Review my list!", new_list_review_path(@list) %>
  <div class="review-box">
    <% @list.reviews.each do |review| %>
      <p><%= review.comment %></p>
      <br>
      <p><%= review.rating %></p>
    <% end %>
    
  </div>
</div>