

 

  
<h1>Welcome to <%= @list.name %></h1>
<%= link_to  "Add a bookmark", new_list_bookmark_path(@list) %>

<div class="container">

  <div class="card-group">
    <% @bookmarks.each do |bookmark| %>
    <div class="card">
      <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
    </div>
    <p><%= link_to  "Remove bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
    <% end %>
    
  </div>

</div>
