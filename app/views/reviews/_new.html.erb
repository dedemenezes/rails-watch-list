<%= simple_form_for [@list, @review], remote: true do |f| %>
<h4>Add your review</h4>
<%= f.association :movie, collection: @list.movies, selected: 1 %>
<%= f.input :comment, as: :text, placeholder: 'Add your review here...' %>
<%= f.input :rating, collection: 1..5 %>
<%= f.submit 'Review!', id: 'btn-review' %>
<% end %>